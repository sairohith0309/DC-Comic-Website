<%= link_to 'Home', dashboard_path(@dashboard), class: 'btn btn-primary' %> 
<h1>Book Items</h1>
<%= render "books/form" %>
<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th> </th>
      <th>Book ID</th>
      <th>Release Date</th>
      <th>Author</th>
      <th>Price</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        
        <td><%= book.book_title %></td>
        <td><%= image_tag 'book1.jpg', class: 'w-100 rounded-circle shadow-lg d-block mx-auto', style: 'max-width: 5rem;' %></td> 
        <td><%= book.book_id %></td>
        <td><%= book.release_date %></td>
        <td><%= book.book_author %></td>
        <td><%= book.book_price %></td>
        <td><%= link_to "click here", book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>